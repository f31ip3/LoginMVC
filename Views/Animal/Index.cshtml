@model List<SelectListItem>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
            Class
            @Html.DropDownList("AnimalClass",Model, new { @class="form-control",id="AnimalClass"})
        </div>
        <div class="form-group">
             Animal
            <select id="animal" name="animal" class="form-control"></select>
        </div>
    </div>
</div>

<script>
    var cboAnimalClass = document.getElementById("AnimalClass");
    cboAnimalClass.addEventListener("change", Refresh);/*Estre evento refresca cada ves que mueven el conbobox*/
    function Refresh() {
        fetch("@Url.Content("~/Animal/Animal")" + "?IdAnimalClass=" + cboAnimalClass.value) /*nombre del controlador segiodo del nombre del metodo*/
            .then(function (result) {
                    if (result.ok) {
                        return result.json();
                    }
            })
            .then(function (data) { // console.log(data);
                   
                cbo = document.getElementById("animal");
                cbo.innerHTML = "";// es para que me limpie los elementos
                data.forEach(function (element) {

                    let opt = document.createElement("option");
                    opt.appendChild(document.createTextNode(element.Id_Text))
                    opt.value = element.Id_Value;

                    cbo.appendChild(opt);
                })
            })
    } 
</script>

